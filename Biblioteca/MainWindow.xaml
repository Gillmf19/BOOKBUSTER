<Window x:Class="Biblioteca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Biblioteca" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <DockPanel Background="#FF0052A5">
        <Grid Background="#FF0052A5" HorizontalAlignment="Center">
            <!-- Botones -->
            <Button x:Name="UsuariosButton" Margin="30,370,0,130" 
                    HorizontalAlignment="Left" Foreground="White" Content="Usuarios"
                    BorderThickness="1" BorderBrush="Black" Background="#FF070708" 
                    Width="247" FontSize="36"/>
            <Button x:Name="LibrosButton" Margin="0,370,0,130" 
                    HorizontalAlignment="Center" Foreground="White" Content="Libros"
                    BorderThickness="1" BorderBrush="Black" Background="Black" 
                    Width="247" FontSize="36"/>
            <Button x:Name="PrestamosButton" Margin="622,370,0,130" 
                    HorizontalAlignment="Left" Foreground="White" Content="Préstamos"
                    BorderThickness="1" BorderBrush="Black" Background="#FF010102" 
                    Width="247" FontSize="36"/>
        </Grid>
    </DockPanel>
</Window>
